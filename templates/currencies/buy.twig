{% extends "layouts/app.twig" %}

{% block content %}
    {%  if flashMessage %}
        <div class="text-2xl">
            {{ flashMessage }}
        </div>
    {% endif %}
    <div>
        BUY:
        <form action="/currencies/buy" method="POST">
            <div>
                <label for="symbol">Symbol</label>
                <input type="text" id="symbol" name="symbol" value="{{ input.symbol }}" required />
            </div>
            <div>
                <label for="amount">Amount</label>
                <input type="number" id="amount" name="amount" value="{{ input.amount }}" required />

                {% if errors.amount %}
                    <span style="color:red">
                        {{ errors.amount }}
                    </span>
                {% endif %}
            </div>
            <button type="submit">Buy</button>
        </form>
    </div>
{% endblock %}